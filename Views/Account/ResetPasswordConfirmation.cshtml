@{
    ViewBag.Title = "Reset password confirmation";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <br />
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>
            <div>
                <p>
                    Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                </p>

                <p>
                    <a class="" href="@Url.Action("Login", "Account", new { area = "" })">Click Here to login</a>
                </p>
            </div>
        </div>
    </div>
</div>
